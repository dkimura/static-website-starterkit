{
  "name": "static-website-starterkit",
  "version": "0.0.1",
  "description": "static website starterkit with pug, sass and webpack",
  "author": "zenoplex",
  "main": "npm run watch",
  "scripts": {
    "clean": "rm -rf dist",
    "browsersync": "browser-sync start --config bs-config.js",
    "pug": "pug src/html/pages --out dist -O \"`yaml2json src/data/site.yaml`\"",
    "pug:watch": "npm run pug -- -w",
    "sass": "node-sass src/sass/*.scss -o dist/css --include-path node_modules/sanitize.css --include-path node_modules/bourbon/app/assets/stylesheets",
    "sass:watch": "npm run sass && npm run sass -- -w",
    "sass:build": "npm run sass && postcss -u autoprefixer -u cssnano -d dist/css dist/css/*.css",
    "webpack": "webpack",
    "webpack:build": "npm run webpack -- --config webpack.config.production.js",
    "watch": "npm run clean && parallelshell 'npm run pug:watch' 'npm run sass:watch' 'npm run browsersync'",
    "build": "npm run clean && parallelshell 'npm run pug' 'npm run sass:build' 'npm run webpack:build'"
  },
  "keywords": [
    "babel",
    "pug",
    "sass",
    "webpack"
  ],
  "devDependencies": {
    "autoprefixer": "^6.1.1",
    "babel-cli": "^6.2.0",
    "babel-core": "^6.2.1",
    "babel-eslint": "^6.1.0",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.1.18",
    "browser-sync": "^2.10.0",
    "cssnano": "^3.3.2",
    "eslint": "^3.0.0",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-plugin-import": "^1.10.1",
    "node-sass": "^3.4.2",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.3.2",
    "pug": "^2.0.0-beta3",
    "pug-cli": "^1.0.0-alpha6",
    "stylelint": "^6.8.0",
    "webpack": "^1.12.9",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.5.1",
    "yaml2json": "^1.0.2"
  },
  "dependencies": {
    "sanitize.css": "^4.1.0"
  },
  "engines": {
    "node": "6.x"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zenoplex/static-website-starterkit"
  }
}
